{
  "name": "airchainpay-relay",
  "version": "1.0.0",
  "description": "Relay server for AirChainPay offline transactions",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "mocha test/**/*.test.js --exit",
    "test:unit": "mocha test/unit/**/*.test.js --exit",
    "test:integration": "mocha test/integration.test.js --exit",
    "test:coverage": "nyc npm run test",
    "test:new-features": "node test/scripts/test-new-features.js",
    "test:all": "node test-runner.js",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "generate-secrets": "node scripts/generate-secrets.js",
    "check-payments": "node scripts/check-payments.js",
    "test-relay": "node scripts/test-relay.js",
    "test-ble": "node scripts/test-ble.js",
    "test-ble-receive": "node scripts/test-ble-receive.js",
    "test-endpoints": "node scripts/test-endpoints.js",
    "monitor:start": "docker-compose -f monitoring/docker-compose.yml up -d",
    "monitor:stop": "docker-compose -f monitoring/docker-compose.yml down",
    "security:audit": "npm audit",
    "security:check": "npm audit --audit-level=moderate"
  },
  "dependencies": {
    "@abandonware/bleno": "^0.6.2",
    "@abandonware/noble": "^1.9.2-15",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "ethers": "^6.8.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.2.1",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "axios": "^1.6.0",
    "chai": "^4.5.0",
    "chai-http": "^4.4.0",
    "eslint": "^8.52.0",
    "mocha": "^10.8.2",
    "nodemon": "^3.0.1",
    "nyc": "^15.1.0",
    "sinon": "^17.0.1",
    "winston": "^3.17.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "",
  "license": "MIT"
}
