# Alertmanager Configuration Template
# Copy this file to alertmanager.env and fill in your actual values

# Slack Webhook URL
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN

# SMTP Configuration for Email Alerts
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=alerts@airchainpay.com
SMTP_PASSWORD=YOUR_SMTP_PASSWORD

# PagerDuty Service Key (for critical alerts)
PAGERDUTY_SERVICE_KEY=YOUR_PAGERDUTY_SERVICE_KEY

# Email addresses for different teams
SECURITY_EMAIL=security@airchainpay.com
OPS_EMAIL=ops@airchainpay.com
DEV_EMAIL=dev@airchainpay.com 